<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="employeetable.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="employeetable.Perspective"
            name="Perspective"
            id="EmployeeTable.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="employeetable.View"
            name="View"
            id="EmployeeTable.view"
            inject="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="employeetable.Remove"
            name="Remove">
      </command>
      <command
            defaultHandler="employeetable.Exit_handler"
            id="employeetable.Exit"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:EmployeeTable.view">
         <command
               commandId="employeetable.Remove"
               label="Remove"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="employeetable.Exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="employeetable.RemoveHandler"
            commandId="employeetable.Remove">
      </handler>
   </extension>

</plugin>
